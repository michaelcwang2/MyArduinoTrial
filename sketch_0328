// sketch 04-02
int ledPinyellow = 13;
int ledPinred = 12;
int delayPeriod = 500;

void setup()
{
  pinMode(ledPinyellow, OUTPUT);
  pinMode(ledPinred, OUTPUT);
}

void loop()
{
  flash(10, delayPeriod);
  delay(3000);
}

void flash(int numFlashes, int d)
{
  for (int i = 0; i < numFlashes; i ++)
  {
    digitalWrite(ledPin, HIGH);
    delay(d+i*500);
    digitalWrite(ledPin, LOW);
    delay(d);
  }
}
